!!!
%html
%head
  %title TaskRabbitClone
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' 
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload' 
  = csrf_meta_tags 
  = csp_meta_tag 

%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand TaskRabbitClone
      %ul.nav.navbar-nav
        %li= link_to "All TAsks", root_path
        - Category.all.each do |category|
          %li= link_to category.name, tasks_path(category: category.name)
      = link_to "New Tasks", new_task_path, class: "navbar navbar-right navbar-link"

  .container
    .col-md-8.col-md-offset-2
      = yield

